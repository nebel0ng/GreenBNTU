@using GreenBNTU.Design.Models
@model ICollection<Project>


<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Проекты</title>
    <link rel="stylesheet" href="/css/main.css" type="text/css">
</head>

<body>
    <header id="main-header">
        <a href="https://bntu.by/" class="logo"></a>
        <a href="/LoginWindow" class="admin"></a>
    </header>

    

    <section id="showcase">
        <div class="container">
            <h1>
                Проекты
            </h1>
        </div>
    </section>

    

    <div class="container">

        <nav id="navbar" class="fixed">
            <div class="container">
                <ul>
                    <li><a href="/">О нас</a></li>
                    <li><a href="/Projecthtml/ProjectList">Проекты</a></li>
                    <li><a href="/GoogleMaps/GoogleMap">Карта раздельного сбора отходов</a></li>
                </ul>
            </div>
        </nav>
        <section id="main">
            @{
                foreach (var project in Model)
                {
                    <h2>@project.Name</h2>
            <table>
                
                <tbody>
                    <tr>
                        <td class="colname">
                            <h3>О проекте:</h3>
                        </td>
                        <td align="justify">@project.Desc</td>
                    </tr>
                    <tr>
                        <td class="colname">
                            <h3>Дедлайн подачи заявки:</h3>
                        </td>
                        <td>
                            <time datetime="@project.SignUpTill">@String.Format("{0:dd.MM.yyyy}", project.SignUpTill)</time>
                        </td>
                        
                    </tr>
                    <tr>
                        
                        <td>
                            <form style="display: inline" action="@project.Link" method="get" target="_blank">
                                <button id="signup">Записаться</button>
                            </form>
                        </td>
                        
                    </tr>
                    
                </tbody>
            </table>
                }
            }
            
        </section>
    
        
    </div>
    
    <footer id="main-footer">
        <p>Copyright &copy;2022 My Website</p>
    </footer>
    
</body>
</html>
